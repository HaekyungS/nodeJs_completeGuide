<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (product.length > 0) { %>
                <ul>
                    <% product.forEach(p=> { %>
                        <li>
                            <p><%=p.title%> (<%=p.cartItem.quantity%>)  [ price $ <%=p.price%> ]</p>
                            <form action="/cart-edit-item" method="POST">
                                <input type="number" name="qty" value="<%=p.cartItem.quantity%>" id="qty">
                                <input type="hidden" value="<%= p.id %>" name="productId" >
                                <button class="btn" type="submit">EDIT</button>
                            </form><!--수량 수정-->
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= p.id %>" name="productId" >
                                <button class="btn" type="submit">DELETE</button>
                            </form> <!--삭제-->
                        </li>
                    <%  }) %>
                </ul>
                <p>total price </p>
            <% } else {%>
                <h1>there's nothing in cart yet!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>